<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @books.each do |book| %>
  <thead>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <span>
          <%= link_to 'Show', book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Edit', edit_book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confilm" => "Are you sure?" %>
        </span>
      </td>
    </tr>
  </thead>
  
<% end %>
</table>

<h1>New book</h1>
<%= form_with model: @book, local: true  do |f| %>
  
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>
  
<% end %>

  